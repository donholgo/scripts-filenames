#!/bin/bash -

if [ $# -eq 0 ]; then
  files=(*)
else
  files=("$@")
fi

rename -v '
  s/-[0-9a-z]{64,}//i;
  s/-[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}//;
  s/-\w{7}\././;
  s/-\d{8}\././;
  s/-\d{6}-\d{3}-A//;
  s/\s*-\d{7}-\w{4,5}//;
  s/Avsnitt /0/;
  s/Del /0/;
  s/ av \d+//;
  s/^(\d)\./0$1./;
  s/^0(\d\d)/$1/;
  s/-[a-z0-9_-]{11}\././i;
' "${files[@]}"
